{{> menu-client active="clientprofile"}}

<form class="box" action="/updateprofile" method="POST">
  <label class="label">Update User Details:</label>
  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">First Name</label>
    </div>
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter First Name" value="{{user.firstName}}" name="firstName">
      </div>
      <div class="field-label is-normal">
        <label class="label">Last Name</label>
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Last Name" value="{{user.lastName}}" name="lastName">
      </div>
    </div>
  </div>
    <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Email</label>
    </div>
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Email" value="{{user.email}}" name="email">
      </div>
      <div class="field-label is-normal">
        <label class="label">Password</label>
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Password" value="{{user.password}}" name="password">
      </div>
    </div>
  </div>
  <button class="button is-primary">Update Profile</button>
</form>
