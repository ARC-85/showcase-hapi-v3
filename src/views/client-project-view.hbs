<section id="addreviewsection" class="section">
  {{> add-review}}
</section>

<section id="listreviewsection" class="section">
  {{> list-all-reviews}}
</section>

<script>
  
  var clientReviewLength = {{clientProjectReviews.length}};
  if (clientReviewLength > 0) {
    document.getElementById("addreviewsection").style.display="none";
  }

  var clientFavouriteLength = {{clientProjectFavourite.length}};
  if (clientFavouriteLength > 0) {
    document.getElementById("addfavouritesection").style.display="none";
    document.getElementById("favourited").style.display="";
  } else {
    document.getElementById("addfavouritesection").style.display="";
    document.getElementById("favourited").style.display="none";
  }

  var reviewLength = {{reviews.length}};
  if (reviewLength > 0) {
    document.getElementById("listreviewsection").style.display="";
    document.getElementById("ratingsection").style.display="";
  } else {
    document.getElementById("listreviewsection").style.display="none";
    document.getElementById("ratingsection").style.display="none";
  }

</script>

