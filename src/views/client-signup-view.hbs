{{> welcome-menu active="clientsignup"}}

<section class="section">
  <h1 class="title">Client Sign up</h1>
  <form action="/clientregister" method="POST">
    <label class="label">Name</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <input class="input" type="text" placeholder="Enter first name" name="clientFirstName">
        </div>
        <div class="field">
          <input class="input" type="text" placeholder="Enter last name" name="clientLastName">
        </div>
      </div>
    </div>
    <div class="field">
      <label class="label">Email</label> <input class="input" type="text" placeholder="Enter email" name="clientEmail">
    </div>
    <div class="field">
      <label class="label">Password</label> <input class="input" type="password" placeholder="Enter Password" name="clientPassword">
    </div>
    <div class="field is-grouped">
      <button class="button is-link">Submit</button>
    </div>
  </form>
</section>