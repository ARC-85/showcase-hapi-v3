<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Review Date</th>
      <th>Review Title</th>
      <th>Reviewer Name</th>
      <th>Rating</th>
      <th>Comments</th>
      <th>Responder Name</th>
      <th>Reply</th>    
    </tr>
  </thead>
  <tbody>
    {{#each reviews}}
      <tr>
        <td>
          {{reviewDate}}
        </td>
        <td>
          {{reviewTitle}}
        </td>
        <td>
          {{clientFirstName}}
        </td>
        <td>
          {{rating}}
        </td>
        <td>
          {{comment}}
        </td>
        <td>
          {{vendorFirstName}}
        </td>
        <td>
          {{reply}}
        </td>        
      </tr>
    {{/each}}
  </tbody>
</table>



